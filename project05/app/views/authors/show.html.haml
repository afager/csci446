%h3
  Name: #{h @author.name}
%p
  %b Photo:
  = image_tag @author.photo.url
%p
  %b Articles:
  %ul.ListoArticls
    - @author_articles.each do |article|
      %li
        = h article.title
        = link_to image_tag('zoom.png'), article, :title => "view this article"
        = link_to image_tag('script_edit.png'), edit_article_path(article), :title => "edit this article"
        = link_to image_tag('delete.png'), article, :confirm => 'Are you sure?', :method => :delete, :title => "delete this article"