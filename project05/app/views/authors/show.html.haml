%ul
  %li
    = link_to image_tag('arrow_left.png'), edit_author_path(@author)
    = link_to 'Back', author_path
  %li
    = link_to image_tag('script_edit.png'), edit_author_path(@author)
    = link_to 'Edit', edit_author_path(@author)
