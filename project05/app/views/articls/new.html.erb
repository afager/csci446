<div class=title>
<h1>Articl.es</h1>
<p>...What are you reading an article or an articl</p>
</div>

<ul class=menubar>
	<li><a href="articls">Articles</a></li>
	<li><a href="authors">Authors</a></li>
</ul>

<%= link_to image_tag('arrow_left.png'), articls_path  %>
<%= link_to 'list all articles', articls_path, :title => "Return to Articles page" %>

<% form_for(@articl) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author_id %><br />
    <%= f.select :author_id, @authors.collect { |a| [a.name, a.id]}, :include_blank => true %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Create', :title => "Create the article and return to list" %>
  </p>
<% end %>
