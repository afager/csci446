<div class=title>
<h1>Articl.es</h1>
<p>...What are you reading an article or an articl</p>
</div>

<%= link_to image_tag('arrow_left.png'), articls_path  %>
<%= link_to 'list all articles', articls_path %>

<% form_for(@articl) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
